# Suporte ao plugin editorconfig
# No site oficial tem a lista dos editores compativeis para baixar e os que já tem inclusos por padrão
# https://editorconfig.org/#download

root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4

[*.{pm,sh,md,yml}]
charset = utf-8

[*.ps1]
charset = iso-8859-1
